@model Maps.Entities.SelectIconLayerViewModel

<ul class="list-group list-group-flush" id="@string.Concat("selectIcon", Model.Id)">
    @if (!Html.ViewData.ModelState.IsValid)
    {
        <li class="list-group-item">
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        </li>
    }
    <li class="list-group-item p-0 pl-3">
        <span class="pt-2 font-weight-bold">
            Select icon:
        </span>
        <a class="btn btn-link dropdown-toggle" data-toggle="dropdown" style="cursor:pointer">
            <img src="@string.Concat("/Content/Images/Icons/", @Model.Icon,".png")" /> @Model.Icon
        </a>
        <ul class="dropdown-menu">
            @foreach (var icon in Model.Icons)
            {
                <li name="@icon" onclick="updateIcon('@Model.Id', '@icon')" style="cursor:pointer">
                    <img src="@string.Concat("/Content/Images/Icons/", @icon,".png")" name="@icon" /> @icon
                </li>
            }
        </ul>
    </li>
</ul>
