@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}

<div class="card my-3">
    <div class="card-header">
        <h1 class="card-title">@ViewBag.Title</h1>
    </div>
    <div class="card-body">
        An error occurred while processing your request.
        <br/>
        @ViewBag.Error
    </div>
</div>

