@model Maps.Entities.CopyMapViewModel

@if (Request.IsAuthenticated)
{
    using (Ajax.BeginForm("Copy", "Map", null,
        new AjaxOptions { UpdateTargetId = "copy", InsertionMode = InsertionMode.Replace },
        new { @class = "form-inline bg-white w-100" }))
    {
        @Html.HiddenFor(m => m.Id)
        <input type="submit" value="Copy" class="btn btn-link" />
        if (!Html.ViewData.ModelState.IsValid)
        {
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        }
    }
}