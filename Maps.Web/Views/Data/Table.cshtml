@model Maps.Entities.TableDataViewModel
@{ ViewBag.Title = "Table"; }

@if (!Html.ViewData.ModelState.IsValid)
{
    <div class="card">
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    </div>
}

<div class="card m-2">
    @if (Model.HasData && Model.Data.Count != 0)
    {
        <div class="card-header">
            Layer: <strong>@Model.LayerName</strong>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-sm">
                    <thead>
                        <tr>
                            <th>#</th>
                            @foreach (var property in Model.Data.FirstOrDefault().Values)
                            {
                                <th>@property.Key</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var i = 1;
                        }
                        @foreach (var data in Model.Data)
                        {
                            <tr>
                                <th>
                                    @i
                                </th>
                                @foreach (var property in data.Values)
                                {
                                    <td>@property.Value</td>
                                }
                                @{
                                    i++;
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="card-header">
            Layer <strong>@Model.LayerName</strong> does not have any data.
        </div>
    }
</div>
