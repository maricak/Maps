@model Maps.Entities.EditMapViewModel

@using (Ajax.BeginForm("Edit", "Map", new { }, new AjaxOptions { HttpMethod = "Post", InsertionMode = InsertionMode.ReplaceWith, UpdateTargetId = string.Concat("map", Model.Id) }, new { id = string.Concat("form", Model.Id) }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.CreationTime)

    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { autofocus = "autofocus" } })
    <input type="submit" value="Save" class="btn btn-link" />
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
}