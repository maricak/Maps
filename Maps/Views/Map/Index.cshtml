@model PagedList.IPagedList<Maps.Entities.Map>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Maps";
}

<div class="card mt-3">
    <div class="card-header">
        <h3 class="card-title m-0">@ViewBag.Title</h3>
    </div>
    <section class="card-body">
        <table class="table table-hover">
            <tr>
                <th>#</th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().CreationTime)
                </th>
                <th class="text-right">
                    <a href="@Url.Action("Create")"><i class="fas fa-plus-square"></i></a>
                </th>
            </tr>
            @{
                var i = 1;
            }

            @foreach (var item in Model)
            {
                <tr>
                    <th>
                        @i
                        @{ i++; }
                    </th>
                    <td>
                        <a href="@Url.Action("Details", new { id = item.Id })">
                            @Html.DisplayFor(modelItem => item.Name)
                        </a>
                    </td>
                    <td>
                        @item.CreationTime.ToLocalTime()
                    </td>
                    <td class="text-right">
                        @using (Html.BeginForm("Delete", "Map", FormMethod.Post, new { id = "deleteForm", @class = "form-inline float-right" }))
                        {
                            @Html.AntiForgeryToken()
                            <a href="@Url.Action("Edit", new { id = item.Id })"><i class="fas fa-edit"></i></a>
                            <span>&nbsp;|&nbsp;</span>
                            <a href="javascript:document.getElementById('deleteForm').submit()"><i class="fas fa-trash-alt"></i></a>
                        }

                    </td>
                </tr>
            }
        </table>

        @if (@Model.PageCount > 1)
        {
            <div class="text-center">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
        }
    </section>
</div>
