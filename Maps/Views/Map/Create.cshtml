@model Maps.Entities.CreateMapViewModel

@{
    ViewBag.Title = "Create map";
}

<div class="card mt-3">
    <div class="card-header">
        <h3 class="card-title m-0">@ViewBag.Title</h3>
    </div>
    <section class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-form-label" })
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", autofocus = "autofocus" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-primary float-right" value="Create" />
            </div>
        }
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </section>
</div>
