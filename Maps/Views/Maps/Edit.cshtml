@model Maps.Entities.EditMapViewModel

@{
    ViewBag.Title = "Edit map";
}

<div class="card mt-3">
    <div class="card-header">
        <h2 class="card-title">@ViewBag.Title</h2>
    </div>
    <section class="card-body">
        @using (Html.BeginForm("Edit", "Map", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()

            @Html.HiddenFor(model => model.Id)
            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-form-label" })
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", autofocus = "autofocus" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary float-right" value="Save" />
            </div>
        }
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </section>
</div>