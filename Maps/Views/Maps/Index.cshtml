@model PagedList.IPagedList<Maps.Entities.Map>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Maps";
}

<div class="card mt-3">
    <div class="card-header">
        <h2 class="card-title">@ViewBag.Title</h2>
    </div>
    <section class="card-body p-0">
        <table class="table table-striped table-hover table-sm table-bordered w-100 h-100 my-3">
            <tr>
                <th>#</th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().CreationTime)
                </th>
                <th class="text-right">
                    @Html.ActionLink("Create New", "Create")
                </th>
            </tr>
            @{
                var i = 1;
            }

            @foreach (var item in Model)
            {
                <tr>
                    <th>
                        @i
                        @{ i++; }
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @item.CreationTime.ToLocalTime()
                    </td>
                    <td class="text-right">
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </table>

        @if (@Model.PageCount > 1)
        {
            <div class="text-center">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
        }
    </section>
</div>
