@model Maps.Entities.Map

@{
    ViewBag.Title = "Delete";
}
<div class="card mt-3">
    <div class="card-header">
        <h2 class="card-title">Are you sure you want to delete this?</h2>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">
            <strong>@Html.DisplayNameFor(model => model.Name):</strong>
            @Html.DisplayFor(model => model.Name)
        </li>
        <li class="list-group-item">
            <strong>@Html.DisplayNameFor(model => model.CreationTime):</strong>
            @Model.CreationTime.ToLocalTime()
        </li>
    </ul>
    <div class="card-body">
        @using (Html.BeginForm("Delete", "Map", FormMethod.Post, new { id = "deleteForm", @class = "form-inline float-right" }))
        {
            @Html.AntiForgeryToken()
            <a href="javascript:document.getElementById('deleteForm').submit()">Delete</a>
            <span>&nbsp;|&nbsp;</span>
            @Html.ActionLink("Back to List", "Index")
        }
    </div>
</div>
